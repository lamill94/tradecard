<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collection</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css">
</head>

<body>

    <header>
        <%- include('header')%>
    </header>

    <section class="section">
        <div class="container">

            <h1 class="title is-size-5 mb-1">
                <%= rowdata[0].collection_name %>
            </h1>
            <h1 class="title is-size-6 has-text-grey">
                <%= rowdata[0].display_name %>
            </h1>

            <% if (isEmptyCollection) { %>

                <p class="empty-collection-message">
                    This collection is empty.
                </p>

                <% } else { %>

                    <div class="dropdown" id="collection-dropdown">
                        <div class="dropdown-trigger">
                            <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
                                <span>Sort by</span>
                                <span class="icon is-small">
                                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                                </span>
                            </button>
                        </div>
                        <div class="dropdown-menu" id="dropdown-menu" role="menu">
                            <div class="dropdown-content">
                                <a href="/collection/sort?member_collection_id=<%=rowdata[0].member_collection_id%>&&sort=release_date ASC,card_number ASC"
                                    class="dropdown-item">Card
                                    Number</a>
                                <a href="/collection/sort?member_collection_id=<%=rowdata[0].member_collection_id%>&&sort=card_name" class="dropdown-item">Card Name (A-Z)</a>
                                <a href="/collection/sort?member_collection_id=<%=rowdata[0].member_collection_id%>&&sort=card_name DESC" class="dropdown-item">Card Name (Z-A)</a>
                            </div>
                        </div>
                    </div>

                    <div class="columns mt-5 is-multiline is-variable is-centered">
                        <% rowdata.forEach((card, index)=> { %>
                            <div class="column is-6-tablet is-3-desktop">
                                <div class="card browser">
                                    <div class="card-image has-text-centered px-5 py-2">
                                        <a href="/card?card_id=<%=card.card_id%>">
                                            <img src="<%= card.image_url %>">
                                        </a>
                                    </div>
                                    <div class="card-content pt-0 pb-2">
                                        <p class="has-text-centered has-text-grey">
                                            <span class="title is-size-6 has-text-grey">
                                                <%= card.expansion_name %>
                                            </span>
                                            <%= card.card_number %>/<%= card.total_cards %>
                                        </p>
                                    </div>
                                    <footer class="card-footer">
                                        <a class="card-footer-item py-1 has-text-grey" href="">
                                            <span class="icon-text">
                                                <span class="icon">
                                                    <i class="far fa-heart"></i>
                                                </span>
                                                <span>Add to Wishlist</span>
                                            </span>
                                        </a>
                                    </footer>
                                    <footer class="card-footer">
                                        <a class="card-footer-item py-1 has-text-grey" href="">
                                            <span class="icon-text">
                                                <span class="icon">
                                                    <i class="fas fa-plus-circle"></i>
                                                </span>
                                                <span>Add to Collection</span>
                                            </span>
                                        </a>
                                    </footer>
                                </div>
                            </div>
                            <% }) %>
                    </div>

                    <% } %>

        </div>

    </section>

    <script>
        const collectionDropdown = document.getElementById('collection-dropdown');

        collectionDropdown.addEventListener('click', (event) => {
            collectionDropdown.classList.toggle('is-active');
            event.stopPropagation();
        });

        document.body.addEventListener('click', (event) => {
            if (!collectionDropdown.contains(event.target)) {
                collectionDropdown.classList.remove('is-active');
            }
        });
    </script>

</body>

</html>