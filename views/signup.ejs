<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>

<body>

    <header>
        <%- include('header')%>
    </header>

    <section class="section pt-5">
        <div class="container">

            <nav class="breadcrumb mb-0" aria-label="breadcrumbs">
                <ul>
                    <li class="breadcrumb separator"><a href="/">Home</a></li>
                    <li class="is-active"><a aria-current="page">Sign up</a></li>
                </ul>
            </nav>

            <div class="columns">
                <div class="column is-6-tablet is-6-desktop">

                    <h1 class="title is-size-4">
                        Create a Pok√©pax account
                    </h1>

                    <div class="block">
                        <p>
                            Already have an account?<a href="/login"> Log in here.</a>
                        </p>
                    </div>

                    <% if (emptyFieldNotification) { %>
                        <div class="notification is-danger">
                            <button class="delete"></button>
                            Please ensure that all fields are populated.
                        </div>
                        <% } %>

                            <% if (userExistsNotification) { %>
                                <div class="notification is-danger">
                                    <button class="delete"></button>
                                    You already have an account - please try logging in.
                                </div>
                                <% } %>

                                    <form class="box" action="/signup" method="POST">

                                        <div class="field">
                                            <label class="label">Display name</label>
                                            <div class="control">
                                                <input class="input" type="displayname" name="displayNameField" />
                                            </div>
                                        </div>

                                        <div class="field">
                                            <label class="label">Email address</label>
                                            <div class="control">
                                                <input class="input" type="email" name="emailField" />
                                            </div>
                                        </div>

                                        <div class="field">
                                            <label class="label">Password</label>
                                            <div class="control">
                                                <input class="input" type="password" name="passwordField" />
                                            </div>
                                        </div>

                                        <button class="button is-link is-focused">Create account</button>
                                    </form>

                </div>
            </div>
            </container>
    </section>

    <footer class="footer pb-3">
    </footer>

    <script>

        // JS to remove notification
        const deleteButton = document.querySelector('.delete');

        deleteButton.addEventListener('click', () => {
            deleteButton.parentNode.style.display = 'none';
        });

    </script>

</body>

</html>