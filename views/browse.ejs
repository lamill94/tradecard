<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Browse</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>

<body>

    <header>
        <%- include('header')%>
    </header>

    <section class="section">
        <div class="container">

            <div class="dropdown" id="browse-dropdown">
                <div class="dropdown-trigger">
                    <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
                        <span>Sort by</span>
                        <span class="icon is-small">
                            <i class="fas fa-angle-down" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
                <div class="dropdown-menu" id="dropdown-menu" role="menu">
                    <div class="dropdown-content">
                        <a href="/browse?sort=release_date,card_number" class="dropdown-item">Card
                            Number</a>
                        <a href="/browse?sort=card_name" class="dropdown-item">Card Name (A-Z)</a>
                        <a href="/browse?sort=card_name DESC" class="dropdown-item">Card Name (Z-A)</a>
                    </div>
                </div>
            </div>

            <a class="button filter-button">
                <span class="icon-text">
                    <span class="icon">
                        <i class="fas fa-filter"></i>
                    </span>
                    <span>Filter</span>
                </span>
            </a>

            <div class="filter-menu-container">
                <section class="section px-5 py-4">
                    <form action="/browse" method="GET">

                        <div class="block">
                            <h1 class="pb-1"><strong>Hit Point</strong></h1>

                            <div class="field is-horizontal">
                                <div class="field-body">
                                    <div class="field is-narrow">
                                        <div class="control">
                                            <input class="input" type="text" name="min_hp" placeholder="Min: <%=hp[0].min_hp%>">
                                        </div>
                                    </div>
                                    <div class="field is-narrow hyphen-container">
                                            <span class="hyphen">-</span>
                                    </div>
                                    <div class="field is-narrow">
                                        <div class="control">
                                            <input class="input" type="text" name="max_hp" placeholder="Max: <%=hp[0].max_hp%>">
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="block">
                            <h1 class="pb-1"><strong>Energy Type</strong></h1>
                            <% energyTypes.forEach((energy_type, index)=> { %>
                                <label class="mr-2">
                                    <input type="checkbox" name="energy_type[]"
                                        value="<%=energy_type.energy_type_name%>">
                                    <img src="<%=energy_type.energy_type_url%>" class="energy-type-image">
                                    <%=energy_type.energy_type_name%>
                                </label>
                                <% }) %>
                        </div>

                        <div class="block">
                            <h1 class="pb-1"><strong>Stage</strong></h1>
                            <% stages.forEach((stage, index)=> { %>
                                <label class="mr-2">
                                    <input type="checkbox" name="stage[]" value="<%=stage.stage%>">
                                    <%=stage.stage%>
                                </label>
                                <% }) %>
                        </div>

                        <div class="block">
                            <h1 class="pb-1"><strong>Weakness</strong></h1>
                            <% energyTypes.forEach((energy_type, index)=> { %>
                                <label class="mr-2">
                                    <input type="checkbox" name="weakness_energy_type[]"
                                        value="<%=energy_type.energy_type_name%>">
                                    <img src="<%=energy_type.energy_type_url%>" class="energy-type-image">
                                    <%=energy_type.energy_type_name%>
                                </label>
                                <% }) %>
                        </div>

                        <div class="block">
                            <h1 class="pb-1"><strong>Resistance</strong></h1>
                            <% energyTypes.forEach((energy_type, index)=> { %>
                                <label class="mr-2">
                                    <input type="checkbox" name="resistance_energy_type[]"
                                        value="<%=energy_type.energy_type_name%>">
                                    <img src="<%=energy_type.energy_type_url%>" class="energy-type-image">
                                    <%=energy_type.energy_type_name%>
                                </label>
                                <% }) %>
                        </div>

                        <div>
                            <button type="submit" class="button is-primary">Apply Filters</button>
                        </div>
                    </form>
                </section>
            </div>

            <div class="columns mt-5 is-multiline is-variable is-centered">
                <% rowdata.forEach((card, index)=> { %>
                    <div class="column is-6-tablet is-3-desktop">
                        <div class="card mb-3">
                            <div class="card-image has-text-centered px-5 pt-2 pb-0">
                                <a href="/card?card_id=<%=card.card_id%>">
                                    <img src="<%= card.image_url %>">
                                </a>
                            </div>
                            <div class="card-content pt-0 pb-2">
                                <div class="columns is-vcentered">
                                    <div class="column is-three-quarters">
                                        <p class="has-text-grey is-size-7">
                                            <span class="title is-size-7 has-text-grey">
                                                <%= card.expansion_name %>
                                            </span>
                                            <%= card.card_number %>/<%= card.total_cards %>
                                        </p>
                                    </div>
                                    <div class="column">
                                        <p class="has-text-right">
                                            <a class="has-text-grey" href="">
                                                <span class="icon-text">
                                                    <span class="icon">
                                                        <i class="far fa-heart"></i>
                                                    </span>
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% if (isAuthenticated) { %>

                            <div class="dropdown-wrapper">

                                <% if (myCollections.length===0) { %>

                                    <div class="dropdown" id="collection-dropdown">
                                        <div class="dropdown-trigger">
                                            <button class="button has-text-grey" aria-haspopup="true"
                                                aria-controls="dropdown-menu">
                                                <span class="icon">
                                                    <i class="fas fa-plus-circle"></i>
                                                </span>
                                                <span>Add to collection</span>
                                                <span class="icon">
                                                    <i class="fas fa-angle-down"></i>
                                                </span>
                                            </button>
                                        </div>
                                        <div class="dropdown-menu" id="dropdown-menu" role="menu">
                                            <div class="dropdown-content py-0">
                                                <a class="button has-text-grey create-collection" href="/collections">
                                                    Create collection
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                    <% } else { %>

                                        <form action="/collection?redirect=browse" method="POST">
                                            <input type="hidden" name="card_id" value="<%= card.card_id %>">
                                            <div class="dropdown" id="collection-dropdown">
                                                <div class="dropdown-trigger">
                                                    <button class="button has-text-grey" aria-haspopup="true"
                                                        aria-controls="dropdown-menu">
                                                        <span class="icon">
                                                            <i class="fas fa-plus-circle"></i>
                                                        </span>
                                                        <span>Add to collection</span>
                                                        <span class="icon">
                                                            <i class="fas fa-angle-down"></i>
                                                        </span>
                                                    </button>
                                                </div>
                                                <div class="dropdown-menu" id="dropdown-menu" role="menu">
                                                    <div class="dropdown-content">
                                                        <% myCollections.forEach((collection, index)=> { %>
                                                            <button type="submit" class="dropdown-item"
                                                                name="member_collection_id"
                                                                value="<%= collection.member_collection_id %>">
                                                                <%= collection.collection_name %>
                                                            </button>
                                                            <% }) %>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>

                                        <% } %> <!--end of my collections are empty-->

                            </div>

                            <% } else { %>

                                <div class="has-text-centered">
                                    <a class="button has-text-grey x" href="/login">
                                        <span class="icon-text">
                                            <span class="icon">
                                                <i class="fas fa-plus-circle"></i>
                                            </span>
                                            <span>Add to collection</span>
                                        </span>
                                    </a>
                                </div>

                                <% } %> <!--end of if authenticated-->

                    </div> <!--end of column-->
                    <% }) %> <!--end of card for loop-->
            </div> <!--end of columns-->
        </div> <!--end of container-->
    </section> <!--end of section-->

    <script>

        //ensures that the JS executes only after the DOM content has been fully loaded and parsed
        document.addEventListener('DOMContentLoaded', function () {

            //selects all elements with the class dropdown and store them in a NodeList called dropdowns
            const dropdowns = document.querySelectorAll('.dropdown');

            //iterate over each dropdown element in the dropdowns NodeList
            dropdowns.forEach(function (dropdown) {

                //selects the dropdown trigger button within the current dropdown element
                const trigger = dropdown.querySelector('.dropdown-trigger');

                //selects the dropdown menu within the current dropdown element
                const menu = dropdown.querySelector('.dropdown-menu');

                //listen for clicks on the dropdown trigger button
                trigger.addEventListener('click', function (event) {
                    event.preventDefault();
                    event.stopPropagation();
                    dropdown.classList.toggle('is-active');
                });

                //listen for clicks anywhere in the document
                document.addEventListener('click', function (event) {
                    const isClickInside = dropdown.contains(event.target);
                    if (!isClickInside) {
                        dropdown.classList.remove('is-active');
                    }
                });
            });
        });

        //JS for the filter menu
        document.addEventListener('DOMContentLoaded', function () {
            const filterButton = document.querySelector('.filter-button');
            const filterMenuContainer = document.querySelector('.filter-menu-container');

            filterButton.addEventListener('click', function () {
                filterMenuContainer.classList.toggle('show');
            });
        });

    </script>

</body>

</html>